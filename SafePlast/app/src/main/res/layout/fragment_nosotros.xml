                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView14"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_marginStart="20dp"
                        android:textSize="15dp"
                        android:text="\nAlex Olaechea\nCorreo: aolaechea@unsa.edu.pe"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/imageView6"
                        android:layout_width="135dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/alex_olaechea" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:layout_centerHorizontal="true"
                    android:orientation="horizontal"
                    android:background="@color/green_normal">

                    <ImageView
                        android:id="@+id/imageView7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bryan_gallegos" />

                    <TextView
                        android:id="@+id/textView15"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="\nBryan Gallegos\nCorreo: cgallegob@unsa.edu.pe"
                        android:textColor="@color/white" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/textView16"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp"
                        android:layout_weight="1"
                        android:textSize="15dp"
                        android:text="\nJordy Valencia\nCorreo:jquispejar@unsa.edu.pe"
                        android:textColor="@color/black" />

                    <ImageView
                        android:id="@+id/imageView8"
                        android:layout_width="134dp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/jordy_valencia" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</RelativeLayout>